#!/usr/bin/perl
#$Id: summary.in,v 1.2 2000-02-29 13:10:08 wilson Exp $

$keep = 0;

while (<STDIN>) {
    if (/^Zone output requested/) {
	$keep = 1;
	print "\n";
    }
    if (/^Zone #/) {
	$keep = 1;
	print "\n";
    }
    if  (/^Constituent/) {
	$keep = 1;
    }
    if (/^total\s/i) {
	$keep = 1;
    }

    if ($keep || /^total\s/i) {
	print $_;
    }

    if (/^isotope/) {
	$keep = 0;
    }

}
